<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PdfViewerSample.MainPage"
             Title="Pdf Viewer">

    <ListView VerticalOptions="FillAndExpand" x:Name="PdfListView" ItemSelected="PdfListView_OnItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding FileName}" Detail="{Binding Url}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>